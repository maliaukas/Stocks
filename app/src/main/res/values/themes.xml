<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.YandexStocks" parent="Base.Theme.YandexStocks">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_grey</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_grey</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="colorError">@color/red</item>
        <item name="colorPositive">@color/green</item>

        <item name="android:colorBackground">@color/white</item>
        <item name="colorOnBackground">@color/black</item>

        <item name="colorSurface">@color/card_color</item>
        <item name="colorOnSurface">@color/black</item>

        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <!-- Base application theme. -->
    <style name="Base.Theme.YandexStocks" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/transparent</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="Theme.YandexStocks.NoActionBar" parent="Theme.YandexStocks">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.YandexStocks.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.YandexStocks.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <attr name="colorPositive" format="color"/>
</resources>
