<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.YandexStocks" parent="Base.Theme.YandexStocks">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/card_color</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="colorError">@color/red_night</item>
        <item name="colorPositive">@color/green_night</item>

        <item name="android:colorBackground">@color/dark_grey</item>
        <item name="colorOnBackground">@color/white</item>

        <item name="colorSurface">@color/card_color_night</item>
        <item name="colorOnSurface">@color/white</item>

        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>
</resources>
